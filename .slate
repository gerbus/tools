# Configuration file for Slate
#  https://github.com/jigish/slate
#  https://blog.mikecordell.com/2014/05/25/getting-started-with-slate.html


# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000


# Monitor Aliases
alias m-laptop		1
alias m-dell 		0


# Position Aliases
alias third 	0.4
alias half 		0.55
alias fat 		0.8

alias left-third		move screenOriginX;screenOriginY								screenSizeX*${third};screenSizeY
alias left-half 		move screenOriginX;screenOriginY								screenSizeX*${half};screenSizeY
alias left-fat 			move screenOriginX;screenOriginY								screenSizeX*${fat};screenSizeY
alias center-third		move screenOriginX+screenSizeX*(1-${third})/2;screenOriginY		screenSizeX*${third};screenSizeY
alias center-half		move screenOriginX+screenSizeX*(1-${half})/2;screenOriginY		screenSizeX*${half};screenSizeY
alias center-fat 		move screenOriginX+screenSizeX*(1-${fat})/2;screenOriginY		screenSizeX*${fat};screenSizeY
alias center-full		move screenOriginX;screenOriginY								screenSizeX;screenSizeY
alias right-third 		move screenOriginX+screenSizeX*(1-${third});screenOriginY		screenSizeX*${third};screenSizeY
alias right-half 		move screenOriginX+screenSizeX*(1-${half});screenOriginY		screenSizeX*${half};screenSizeY
alias right-fat 		move screenOriginX+screenSizeX*(1-${fat});screenOriginY			screenSizeX*${fat};screenSizeY

alias laptop-left-half		${left-half}	${m-laptop}
alias laptop-left-fat		${left-fat}		${m-laptop}
alias laptop-center-fat		${center-fat}	${m-laptop}
alias laptop-right-third	${right-third}	${m-laptop}
alias laptop-right-half		${right-half}	${m-laptop}
alias laptop-right-fat		${right-fat}	${m-laptop}

alias dell-left-half		${left-half}	${m-dell}
alias dell-left-fat			${left-fat}		${m-dell}
alias dell-center-fat		${center-fat}	${m-dell}
alias dell-center-fat-2		move screenOriginX+300;screenOriginY 	screenSizeX*0.8;screenSizeY				${m-dell}
alias dell-center-fat-3		move screenOriginX+350;screenOriginY 	screenSizeX*0.8;screenSizeY				${m-dell}
alias dell-right-half		${right-half}	${m-dell}
alias dell-right-fat		${right-fat}	${m-dell}


# Montior Layouts
layout 2monitor 'Sublime Text':REPEAT			${dell-center-fat} | ${dell-center-fat-2} | ${dell-center-fat-3}
layout 2monitor 'iTerm2':REPEAT					${dell-left-fat}
layout 2monitor 'Spotify':REPEAT				${laptop-right-half}
layout 2monitor 'Activity Monitor'				${laptop-right-third}
layout 2monitor 'Google Chrome':REPEAT_LAST		${dell-right-fat} | ${laptop-left-fat} | ${laptop-center-fat} | ${laptop-right-fat}

# Default Layouts
default 2monitor							resolutions:${m-dell};${m-laptop};


# Bind
bind end:alt;cmd 	layout 2monitor
bind s:alt;cmd 		focus 'Sublime Text'
bind t:alt;cmd		focus 'iTerm2'
bind c:alt;cmd		focus 'Google Chrome'
bind right:alt;cmd	chain ${laptop-left-half} | ${laptop-right-half} | ${dell-left-half} | ${dell-right-half}
bind left:alt;cmd	chain ${laptop-right-half} | ${laptop-left-half} | ${dell-right-half} | ${dell-left-half}
bind up:alt;cmd		chain ${center-fat} | ${center-full}
 
